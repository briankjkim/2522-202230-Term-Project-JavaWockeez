<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER"
      prefHeight="359.0"
      prefWidth="405.0"
      spacing="20.0"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/19"
      fx:controller="ca.bcit.comp2522.termproject.javawockeez.MainMenuController">

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
   </padding>

   <Text id="main-menu-title"
         text="Escape Subject 2522"
         textAlignment="CENTER">
   </Text>

   <Button fx:id="startGameButton"
           onAction="#onStartButtonClick"
           text="Begin" />

   <Button fx:id="exitGameButton"
           onAction="#onQuitButtonClick"
           text="Quit" />

   <Text id="main-menu-footer"
         text="Created by Brian Kim, Wallace Trinh"
         textAlignment="CENTER">
   </Text>

   <stylesheets>
      <URL value="@styles.css"/>
   </stylesheets>
</VBox>